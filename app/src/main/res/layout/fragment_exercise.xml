<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ExerciseFragment"
    android:orientation="vertical"
    android:background="#C1C1C1"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/btn_squats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:padding="0.5dp"
            android:contentDescription="스쿼트"
            android:scaleType="fitXY"
            android:src="@drawable/squat_back" />

        <TextView
            android:layout_width="400px"
            android:layout_height="200px"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="SQUAT"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="100px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/btn_pushups"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:contentDescription="푸쉬업"
            android:padding="0.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/push_up_back" />

        <TextView
            android:layout_width="400px"
            android:layout_height="200px"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:text="Push Up"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="100px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/btn_pullup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:contentDescription="풀 업"
            android:padding="0.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/poll_up_back" />

        <TextView
            android:layout_width="400px"
            android:layout_height="200px"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="Pull Up"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="100px" />
    </RelativeLayout>

</LinearLayout>