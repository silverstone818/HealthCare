<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:context=".SubMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF3000"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#FFFFFF"
            android:text="◀"
            android:textColor="@color/black"
            tools:ignore="HardcodedText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="회원정보                   "
            android:fontFamily="@font/lotte"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:gravity="center"
        android:background="@color/gray"
        android:textSize="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:layout_margin="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="아이디(이메일)"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtName2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:text="홍길동"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/txtEmail2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="bottom"
            android:text="android@gamil.com"
            android:textSize="14sp"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:gravity="center"
            android:background="@color/gray"
            android:textSize="20dp" />



        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:text="나이"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/age_text"
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:inputType="number"
                android:maxLength="3"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:backgroundTint="@android:color/black"
                android:hint="25" />
            <TextView
                android:id="@+id/age_limit"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text=" 0/3"
                android:textColor="#777777" />
        </LinearLayout>



        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="키"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/height_text"
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:inputType="number"
                android:maxLength="3"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:backgroundTint="@android:color/black"
                android:hint="174" />
            <TextView
                android:id="@+id/height_limit"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="0/3"
                android:textColor="#777777" />
        </LinearLayout>



        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="몸무게"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/weight_text"
                android:layout_width="330dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:inputType="number"
                android:maxLength="3"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:backgroundTint="@android:color/black"
                android:hint="70" />
            <TextView
                android:id="@+id/weight_limit"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="0/3"
                android:textColor="#777777" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">
            <Button
            android:id="@+id/btn_move2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="정보저장"
            android:fontFamily="@font/lotte_bold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="10dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>