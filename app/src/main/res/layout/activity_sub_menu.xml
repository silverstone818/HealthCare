<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    tools:context=".SubMenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:background="@drawable/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/lotte_bold"
            android:text="Hellthing"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00FFFFFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lotte"
            android:text="개인정보수정"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <TextView
            android:layout_width="330dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:text="나이"
            android:background="@color/gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42.1dp"
        android:layout_marginRight="42.1dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/Icon_age"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="나이"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:background="@drawable/border_background"/>
            <EditText
                android:id="@+id/age_text"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/Icon_age"
                android:layout_marginStart="-3dp"
                android:paddingTop="1dp"
                android:paddingStart="10dp"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:textSize="20dp"
                android:maxLength="3"
                android:inputType="number"
                android:textColor="@color/black"
                android:background="@drawable/border_background"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/age_limit"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:text="0/3"
            android:textColor="#777777" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Icon_height"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="키"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:background="@drawable/border_background"/>
            <EditText
                android:id="@+id/height_text"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/Icon_height"
                android:layout_marginStart="-3dp"
                android:paddingTop="1dp"
                android:paddingStart="10dp"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:textSize="20dp"
                android:maxLength="3"
                android:inputType="number"
                android:textColor="@color/black"
                android:background="@drawable/border_background"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/height_limit"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:text="0/3"
            android:textColor="#777777" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Icon_weight"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="몸무게"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:background="@drawable/border_background"/>
            <EditText
                android:id="@+id/weight_text"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/Icon_weight"
                android:layout_marginStart="-3dp"
                android:paddingTop="1dp"
                android:paddingStart="10dp"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:textSize="20dp"
                android:maxLength="3"
                android:inputType="number"
                android:textColor="@color/black"
                android:background="@drawable/border_background"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/weight_limit"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:text="0/3"
            android:textColor="#777777" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">
            <Button
            android:id="@+id/btn_move2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="정보저장"
            android:fontFamily="@font/lotte_bold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_margin="10dp"/>
    </LinearLayout>
</LinearLayout>