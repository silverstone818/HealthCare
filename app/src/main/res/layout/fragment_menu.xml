<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/menu_back"
    tools:context=".MenuFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center">

    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/cpb_circlebar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        CircleProgressView:cpv_autoTextSize="true"
        CircleProgressView:cpv_barColor="#FF6666"
        CircleProgressView:cpv_barWidth="15dp"
        CircleProgressView:cpv_maxValue="40"
        CircleProgressView:cpv_innerContourSize="0dp"
        CircleProgressView:cpv_outerContourSize="0dp"
        CircleProgressView:cpv_rimColor="@color/white"
        CircleProgressView:cpv_rimWidth="10dp"
        CircleProgressView:cpv_textScale="0.7"
        CircleProgressView:cpv_textColor="#FFFFFF"
        CircleProgressView:cpv_value="20"/>

    <LinearLayout
        android:id="@+id/prp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cpb_circlebar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/StatBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="@color/white"
            android:text="정상" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/menuTwoBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_proflie"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:backgroundTint="@color/white"
            android:text="회원정보"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_record"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:backgroundTint="@color/white"
            android:text="운동기록"
            android:textSize="30dp" />
    </LinearLayout>

</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuTwoBar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:layout_margin="1dp"
            android:text="로그아웃"
            android:textColor="#605F5F" />
        <Button
            android:id="@+id/btn_withdrawal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:backgroundTint="@color/white"
            android:text="회원탈퇴"
            android:textColor="#605F5F" />
    </LinearLayout>
</LinearLayout>


</RelativeLayout>